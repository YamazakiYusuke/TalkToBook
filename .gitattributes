# Git LFS configuration for TalkToBook Golden Test Kit

# Golden test images
goldens/**/*.png filter=lfs diff=lfs merge=lfs -text
goldens/**/*.jpg filter=lfs diff=lfs merge=lfs -text
goldens/**/*.jpeg filter=lfs diff=lfs merge=lfs -text

# Test output images (actual, diff)
**/golden_images/**/*.png filter=lfs diff=lfs merge=lfs -text
**/golden_images/**/*.jpg filter=lfs diff=lfs merge=lfs -text
**/golden_images/**/*.jpeg filter=lfs diff=lfs merge=lfs -text

# Large binary test files
test-reports/**/*.png filter=lfs diff=lfs merge=lfs -text
test-reports/**/*.jpg filter=lfs diff=lfs merge=lfs -text

# Android build outputs (optional - for large APKs)
*.apk filter=lfs diff=lfs merge=lfs -text

# Documentation images
docs/**/*.png filter=lfs diff=lfs merge=lfs -text
docs/**/*.jpg filter=lfs diff=lfs merge=lfs -text